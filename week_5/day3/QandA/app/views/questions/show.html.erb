<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @question.tags %>
</p>

<p>
  <strong>Answers:</strong>
  <ul>
    <% @question.answers.each do |answer| %>
      <li> <%= link_to('Show', answer, class: 'btn btn-default btn-xs') %> <%= answer.body %> </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
