<%= simple_form_for([@company, @employee]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_id, collection: company_collection %>
    <%= f.input :name %>
    <%= f.input :job_title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
