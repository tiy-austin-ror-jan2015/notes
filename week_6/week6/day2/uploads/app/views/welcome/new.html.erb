<h1>New User</h1>
<%= form_for @user, multipart: true do |f| %>

  <div class='errors'>
    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.text_field :full_name, placeholder: 'full name' %>
  </div>
  <div class='form-group'>
    <%= f.file_field :avatar %>
  </div>
  <div class='actions'>
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
